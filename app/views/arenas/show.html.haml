  .sportify-panel.sportify-small-panel.sportify-radius
    %h1.sportify-font Info & Actions
    .form-group 
      = label_tag :location, 'Location', class: 'sportify-label'
      .form-control{ disabled: true }= @arena.location
    .form-group 
      = label_tag :phone_number, 'Phone Number', class: 'sportify-label'
      .form-control{ disabled: true }= @arena.phone_number
    .form-group 
      = label_tag :latitude, 'Latitude', class: 'sportify-label'
      .form-control{ disabled: true }= @arena.latitude
    .form-group 
      = label_tag :longitude, 'Longitude', class: 'sportify-label'
      .form-control{ disabled: true }= @arena.longitude
    %br
    = link_to fa_icon('plus', text: 'Create a Reservation'), new_reservation_path(arena_id: @arena.id), class: 'btn sportify-primary-button sportify-wide-button sportify-radius sportify-font fs-4'
