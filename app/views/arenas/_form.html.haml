= form_for @arena do |f|
  - if @arena.errors.any?
    #error_explanation
      %h2= "#{pluralize(@arena.errors.count, "error")} prohibited this arena from being saved:"
      %ul
        - @arena.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :title, class: 'sportify-label'
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :location, class: 'sportify-label'
    = f.text_field :location, class: 'form-control'
  .form-group
    = f.label :phone_number, class: 'sportify-label'
    = f.text_field :phone_number, class: 'form-control'
  .form-group
    = f.label :latitude, class: 'sportify-label'
    = f.number_field :latitude, step: :any, class: 'form-control'
  .form-group
    = f.label :longitude, class: 'sportify-label'
    = f.number_field :longitude, step: :any,class: 'form-control'
  .form-group
    = f.label :photo, class: 'sportify-label'
    = f.file_field :photo, class: 'form-control'
  .actions
    %br
    = f.submit 'Save', class: 'btn sportify-primary-button sportify-wide-button sportify-radius sportify-font fs-4'
