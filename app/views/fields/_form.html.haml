  .form-group
    = f.label :arena, class: 'sportify-label'
    = f.select :arena_id, options_from_collection_for_select(Arena.all, 'id', 'title', Arena.first), {}, class: 'form-select form-control'
  .form-group
    = f.label :sport, class: 'sportify-label'
    = f.select :sport_id, options_from_collection_for_select(Sport.all, 'id', 'name', Sport.first), {}, class: 'form-select form-control'
  .form-group
    = f.label :label, class: 'sportify-label'
    = f.text_field :label, class: 'form-control'
  .form-group
    = f.label :min_players, class: 'sportify-label'
    = f.number_field :min_players, value: 10, step: 1, class: 'form-control'
  .form-group
    = f.label :max_players, class: 'sportify-label'
    = f.number_field :max_players, value: 12, step: 1, class: 'form-control'
  .actions
    %br
    = f.submit 'Save', class: 'btn sportify-primary-button sportify-wide-button sportify-radius sportify-font fs-4'
