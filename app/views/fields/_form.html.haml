= form_for @field do |f|
  - if @field.errors.any?
    #error_explanation
      %h2= "#{pluralize(@field.errors.count, "error")} prohibited this field from being saved:"
      %ul
        - @field.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :arena
    = f.text_field :arena
  .field
    = f.label :sport
    = f.text_field :sport
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :min_players
    = f.number_field :min_players
  .field
    = f.label :max_players
    = f.number_field :max_players
  .actions
    = f.submit 'Save'
