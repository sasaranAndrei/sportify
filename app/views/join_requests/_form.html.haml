= form_for @join_request do |f|
  - if @join_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@join_request.errors.count, "error")} prohibited this join_request from being saved:"
      %ul
        - @join_request.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :player
    = f.text_field :player
  .field
    = f.label :reservation
    = f.text_field :reservation
  .actions
    = f.submit 'Save'
