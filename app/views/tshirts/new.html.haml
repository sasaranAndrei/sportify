= form_for @tshirt do |f|
  .sportify-page
    .sportify-panel.sportify-small-panel.sportify-radius
      %h1.sportify-font Customize Tshirt
      .form-group
        = f.label :color, class: 'sportify-label'
        %br/
        = f.select :color, options_for_select(Tshirt::COLORS), {}, class: 'form-select form-control'
      .form-group
        = f.label :size, class: 'sportify-label'
        %br/
        = f.select :size, options_for_select(Tshirt::SIZES), {}, class: 'form-select form-control'
      .form-group
        = f.label :nickname, class: 'sportify-label'
        %br/
        = f.text_field :nickname, placeholder: current_player.nickname, class: 'form-control'
      .form-group
        = f.label :number, class: 'sportify-label'
        %br/
        = f.number_field :number, placeholder: 10, step: 1, min: 1, max: 99, class: 'form-control'
      %br
      = button_tag fa_icon('cart-arrow-down', text: "Get a Tshirt (#{@tshirt.price})"), type: 'submit', class: 'btn sportify-primary-button sportify-wide-button sportify-radius sportify-font fs-4'
